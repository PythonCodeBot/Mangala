#:import JACKPOT_TYPES_CODES defs.JACKPOT_TYPES_CODES
#:import PIT_TYPES_CODES defs.PIT_TYPES_CODES

<UiPit>:
    pit_type: -1
    stones_text: stones_text
    id: stones_text
    # args is the class
    font_size: 30

<PitRaw>:
    orientation: 'horizontal'
    spacing: 10


    UiPit:
        pit_type: PIT_TYPES_CODES[root.pit_type]
    UiPit:
        pit_type: PIT_TYPES_CODES[root.pit_type]
    UiPit:
        pit_type: PIT_TYPES_CODES[root.pit_type]
    UiPit:
        pit_type: PIT_TYPES_CODES[root.pit_type]
    UiPit:
        pit_type: PIT_TYPES_CODES[root.pit_type]
    UiPit:
        pit_type: PIT_TYPES_CODES[root.pit_type]

<PitColumn>:
    orientation: 'vertical'
    spacing: 5
    PitRaw:
        pit_type: 0
    PitRaw:
        pit_type: 1

<PlayLayout>:
    spacing: 10
    size_hint: (1, 0.9)

    Label:
        size_hint_x: 0.01

    UiPit:
        pit_type: JACKPOT_TYPES_CODES[0]
        size_hint_x: 0.4
    PitColumn
    UiPit:
        pit_type: JACKPOT_TYPES_CODES[1]
        size_hint_x: 0.4

    Label:
        size_hint_x: 0.01

<MainLayout>
    #Image:
    #Rectangle:
            #source: "wood.jpg"


    pits_layout: pits_layout
    orientation: 'vertical'
    title_text: title_text

    Label:
        size_hint_y: 0.02
    Label:
        text: 'Mangala'
        size_hint_y: 0.4
        font_size: 80
        id: title_text
    PlayLayout:
        id: pits_layout

    Label:
        size_hint_y: 0.02
