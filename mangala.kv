#:import JACKPOT_TYPES_CODES main.JACKPOT_TYPES_CODES
#:import PIT_TYPES_CODES main.PIT_TYPES_CODES

<Pit>:
    pit_type: -1
    stones_text: stones_text
    text: str(root.stones)  # init the stones
    id: stones_text
    # args is the class


<PitRaw>:
    orientation: 'horizontal'
    spacing: 10


    Pit:
        pit_type: PIT_TYPES_CODES[root.pit_type]
    Pit:
        pit_type: PIT_TYPES_CODES[root.pit_type]
    Pit:
        pit_type: PIT_TYPES_CODES[root.pit_type]
    Pit:
        pit_type: PIT_TYPES_CODES[root.pit_type]
    Pit:
        pit_type: PIT_TYPES_CODES[root.pit_type]
    Pit:
        pit_type: PIT_TYPES_CODES[root.pit_type]

<PitColumn>:
    orientation: 'vertical'
    spacing: 5
    PitRaw:
        pit_type: 0
    PitRaw:
        pit_type: 1

<PlayLayout>:
    spacing: 10
    size_hint: (1, 0.9)

    Pit:
        pit_type: JACKPOT_TYPES_CODES[0]
        size_hint_x: 0.4
    PitColumn
    Pit:
        pit_type: JACKPOT_TYPES_CODES[1]
        size_hint_x: 0.4

<MainLayout>
    pits_layout: pits_layout
    orientation: 'vertical'
    title_text: title_text

    Label:
        text: 'Mangala'
        size_hint_y: 0.3
        font_size: 90
        id: title_text
    PlayLayout:
        id: pits_layout

